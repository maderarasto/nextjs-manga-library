generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Collection {
  id Int @id @default(autoincrement())
  userId String
  name String
  summary String
  genres Genre[]
  volumes Volume[]
}

model Genre {
  id Int @id @default(autoincrement())
  name String
  collections Collection[]
}

model Volume {
  id Int @id @default(autoincrement())
  collection Collection @relation(fields: [collectionId], references: [id])
  collectionId Int
  userId String
  name String
  summary String? @default("")
  state VolumeState? @default(RELEASED)
  pages Int? @default(0)
}

enum VolumeState {
  RELEASED
  BOUGHT
  READING
  FINISHED
  LOST
}